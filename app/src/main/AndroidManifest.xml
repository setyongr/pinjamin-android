<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.setyongr.pinjamin">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.setyongr.pinjamin.App">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.file_provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>
        <activity android:name=".presentation.portal.PortalActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.setyongr.pinjamin.presentation.main.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.signin.SignInActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.setyongr.pinjamin.presentation.signup.SignUpActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".presentation.detail.DetailActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".presentation.mydetail.MyDetailActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".presentation.order.OrderActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.setyongr.pinjamin.presentation.pinjamin.OrderToMeDetailActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.setyongr.pinjamin.presentation.main.profile.verify.VerifyProfileActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.setyongr.pinjamin.presentation.pinjamin.PinjaminActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>